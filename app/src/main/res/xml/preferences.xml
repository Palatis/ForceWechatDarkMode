<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <Preference
        android:key="@string/preference_dark_mode_status_key"
        android:selectable="false"
        android:title="@string/preference_dark_mode_status_title_unknown" />

    <SwitchPreference
        android:defaultValue="false"
        android:key="@string/preference_switch_enhanced_mode_key"
        android:summary="@string/preference_switch_enhanced_mode_summary"
        android:title="@string/preference_switch_enhanced_mode_title" />

    <PreferenceCategory android:title="@string/preference_category_debug_title">
        <SwitchPreference
            android:defaultValue="false"
            android:key="@string/preference_switch_log_to_file_key"
            android:summary="@string/preference_switch_log_to_file_summary"
            android:title="@string/preference_switch_log_to_file_title" />
        <Preference
            android:key="@string/preference_clear_log_key"
            android:title="@string/preference_clear_log_title" />
    </PreferenceCategory>

</PreferenceScreen>